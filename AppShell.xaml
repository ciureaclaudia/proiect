<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Proiect1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Proiect1"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False"
    Title="Proiect1">

    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate local:MainPage}"
                      Route="MainPage" 
                      Icon="home.png"/>

  

        <ShellContent Title="Test personalitate"
                      ContentTemplate="{DataTemplate local:CautareHotel}"
                      Route="CautareHotel"
                      Icon="search.png" />
    </FlyoutItem>


</Shell>
